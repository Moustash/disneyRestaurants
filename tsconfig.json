{
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": "./App",
    "types": ["node"],
    "paths": {
      "*": ["types/*"],
      "@Components": ["UI/Components"],
      "@Containers": ["UI/Containers"],
      "@Screens": ["UI/Screens"],
      "@Styles": ["UI/Styles"],
      "@Store": ["Store"],
      "@Navigation": ["UI/Navigation"],
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "noEmit": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "Tests", "__tests__"],
}
